<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/label_countdown_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_countdown_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <EditText
        android:id="@+id/editText_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@id/label_countdown_age"
        app:layout_constraintLeft_toLeftOf="@+id/label_countdown_age"
        android:layout_marginTop="@dimen/main_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_countdown_age"/>

    <TextView
        android:id="@+id/label_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_your_birth"
        app:layout_constraintLeft_toLeftOf="@+id/editText_age"
        app:layout_constraintStart_toStartOf="@+id/editText_age"
        android:layout_marginTop="@dimen/main_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/editText_age"
        />

    <EditText
        android:id="@+id/editText_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="@+id/label_birth"
        app:layout_constraintStart_toStartOf="@+id/label_birth"
        android:layout_marginTop="@dimen/main_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_birth"/>

</android.support.constraint.ConstraintLayout>
