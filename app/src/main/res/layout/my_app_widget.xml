<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fbf7ba"
                android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/label_countdown_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_countdown_hint"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/label_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_slogan"
        android:layout_alignLeft="@+id/label_countdown_hint"
        android:layout_alignStart="@+id/label_countdown_hint"
        android:layout_below="@+id/label_countdown_hint"
        android:layout_marginTop="@dimen/widget_vertical_margin"
        />

    <TextView
        android:id="@+id/label_targets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_current_target"
        android:layout_alignLeft="@+id/label_slogan"
        android:layout_alignStart="@+id/label_slogan"
        android:layout_below="@+id/label_slogan"
        android:layout_marginTop="@dimen/widget_vertical_margin"
        />

    <TextView
        android:id="@+id/targets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignLeft="@+id/label_targets"
        android:layout_alignStart="@+id/label_targets"
        android:layout_below="@+id/label_targets"
        android:layout_marginTop="@dimen/widget_vertical_margin"
        />

