<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.xmudall.timecountdown.MainActivity">

    <TextView
        android:id="@+id/label_countdown_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_countdown_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/label_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_slogan"
        app:layout_constraintLeft_toLeftOf="@+id/label_countdown_hint"
        app:layout_constraintStart_toStartOf="@+id/label_countdown_hint"
        app:layout_constraintTop_toBottomOf="@+id/label_countdown_hint"
        android:layout_marginTop="@dimen/main_vertical_margin"
        />

    <TextView
        android:id="@+id/label_targets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_current_target"
        app:layout_constraintLeft_toLeftOf="@+id/label_slogan"
        app:layout_constraintStart_toStartOf="@+id/label_slogan"
        app:layout_constraintTop_toBottomOf="@+id/label_slogan"
        android:layout_marginTop="@dimen/main_vertical_margin"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="344dp"
        android:layout_height="279dp"
        app:layout_constraintLeft_toLeftOf="@+id/label_targets"
        app:layout_constraintStart_toStartOf="@+id/label_targets"
        app:layout_constraintTop_toBottomOf="@+id/label_targets"
        android:layout_marginTop="@dimen/main_vertical_margin"
        />

</android.support.constraint.ConstraintLayout>
